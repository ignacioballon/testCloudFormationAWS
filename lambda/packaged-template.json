AWSTemplateFormatVersion: '2010-09-09'
Transform:
- AWS::Serverless-2016-10-31
Description: My Lambda Resources
Resources:
  MyLambdaRole:
    Type: AWS::IAM::Role
    Properties:
      RoleName: my-role-sam
      AssumeRolePolicyDocument:
        Version: '2012-10-17'
        Statement:
        - Effect: Allow
          Principal:
            Service:
            - lambda.amazonaws.com
          Action:
          - sts:AssumeRole
      Path: /
      Policies:
      - PolicyName: my-lambda-policy
        PolicyDocument:
          Version: '2012-10-17'
          Statement:
          - Effect: Allow
            Action:
            - logs:CreateLogGroup
            - logs:CreateLogStream
            - logs:PutLogEvents
            Resource: arn:aws:logs:*:*:*
  MyLambda1:
    Type: AWS::Serverless::Function
    Properties:
      FunctionName: my-sam-project-igna
      Handler: lambda.handler
      Runtime: python3.6
      CodeUri: s3://upb-bucket-ignaciob/d1ebc98a94c9b13c38db7fdc306a8d14
      Role:
        Fn::GetAtt:
        - MyLambdaRole
        - Arn
